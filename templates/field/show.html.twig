{% extends 'base.html.twig' %}

{% block title %}{{ 'index.field'|trans }}{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white">
    <p class="text-5xl font-bold mt-12 mb-8">{{ 'index.fieldInfo'|trans }}</p>

    <div class="flex-grow p-6 w-full max-w-3xl mx-auto">
        <div class="bg-gray-900 p-8 rounded-3xl shadow-2xl">
            <table class="min-w-full text-sm text-left text-white border border-gray-700">
                <tbody>
                    <tr>
                        <th class="px-6 py-4">{{ 'show.id'|trans }}</th>
                        <td class="px-6 py-4">{{ field.id }}</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-4">{{ 'show.name'|trans }}</th>
                        <td class="px-6 py-4">{{ field.Name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-8 flex justify-center space-x-6">
            <a href="{{ path('app_field_index') }}" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition duration-300">{{ 'new.backToList'|trans }}</a>
            <a href="{{ path('app_field_edit', {'id': field.id}) }}" class="px-6 py-3 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition duration-300">{{ 'show.edit'|trans }}</a>
        </div>

        <div class="mt-8 text-center">
            <form method="post" action="{{ path('app_field_delete', {'id': field.id}) }}" onsubmit="return confirm('Are you sure you want to delete this field?');">
                <button type="submit" class="px-6 py-3 bg-red-600 text-white font-semibold rounded-md hover:bg-red-700 transition duration-300">{{ 'delete.delete'|trans }}</button>
            </form>
        </div>
    </div>

    <footer class="bg-gray-900 text-white py-12 w-full mt-12">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div>
                <h3 class="text-xl font-semibold mb-4">{{ 'base.info'|trans }}</h3>
                <a href="{{ path('app_home') }}" class="block hover:underline">{{ 'base.legalNotices'|trans }}</a>
                <a href="{{ path('app_home') }}" class="block hover:underline">{{ 'base.confPolicy'|trans }}</a>
            </div>
            <div>
                <h3 class="text-xl font-semibold mb-4">{{ 'base.support'|trans }}</h3>
                <a href="{{ path('app_home') }}" class="block hover:underline">{{ 'base.contact'|trans }}</a>
                <a href="{{ path('app_home') }}" class="block hover:underline">{{ 'base.qna'|trans }}</a>
            </div>
            <div>
                <h3 class="text-xl font-semibold mb-4">{{ 'base.followUs'|trans }}</h3>
                <a href="#" class="block hover:underline">{{ 'base.twt'|trans }}</a>
                <a href="#" class="block hover:underline">{{ 'base.fbk'|trans }}</a>
                <a href="#" class="block hover:underline">{{ 'base.insta'|trans }}</a>
            </div>
        </div>
    </footer>
</div>
{% endblock %}
