{% extends 'base.html.twig' %}

{% block title %}{{ 'index.userIndex'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <!-- Titre de la page -->
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Liste des Utilisateurs</h1>

    <!-- Table Responsive -->
    <div class="overflow-x-auto shadow-md rounded-lg">
        <table class="min-w-full bg-white border border-gray-300">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 border border-gray-300">ID</th>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 border border-gray-300">Email</th>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 border border-gray-300">Rôles</th>
                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 border border-gray-300">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="odd:bg-white even:bg-gray-50 hover:bg-gray-100">
                    <td class="px-4 py-3 text-sm text-gray-700 border border-gray-300">{{ user.id }}</td>
                    <td class="px-4 py-3 text-sm text-gray-700 border border-gray-300">{{ user.email }}</td>
                    <td class="px-4 py-3 text-sm text-gray-700 border border-gray-300">
                        {{ user.roles ? user.roles|json_encode : 'Aucun rôle' }}
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-700 border border-gray-300">
                        <div class="flex space-x-3">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" 
                               class="text-blue-500 hover:underline">Afficher</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                               class="text-green-500 hover:underline">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-4 py-3 text-center text-sm text-gray-600 border border-gray-300">
                        Aucun utilisateur trouvé.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Lien de création d'utilisateur -->
    <div class="mt-6 text-center">
        <a href="{{ path('app_user_new') }}" 
           class="inline-block px-6 py-2 text-white bg-blue-500 rounded-lg shadow-md hover:bg-blue-600 transition">
            Créer un nouvel utilisateur
        </a>
    </div>
</div>
{% endblock %}
