{% extends 'base.html.twig' %}

{% block title %}{{ 'index.userIndex'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'index.userIndex'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'show.id'|trans }}</th>
                <th>{{ 'show.email'|trans }}</th>
                <th>{{ 'show.roles'|trans }}</th>
                <th>{{ 'index.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    &nbsp;
                    &nbsp;
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'index.noRecords'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">{{ 'index.createNew'|trans }}</a>
{% endblock %}
