{% extends 'base.html.twig' %}

{% block title %}{{ 'user.new'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .bg-blur {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.1); /* Fond semi-transparent pour le flou */
    }

    .arrow-container {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease-in-out;
    }

    .button-container:hover .arrow-container {
        transform: translateX(10px);
    }

    .arrow {
        width: 0;
        height: 0;
        border-left: 5px solid white;
        border-top: 5px solid transparent;
        border-bottom: 5px solid transparent;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-center text-white mb-6">{{ 'user.new'|trans }}</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div class="mb-4">
                {{ form_row(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-600 bg-gray-700 text-white rounded-md'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.password, {'attr': {'class': 'w-full px-4 py-2 border border-gray-600 bg-gray-700 text-white rounded-md'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.roles, {'attr': {'class': 'w-full px-4 py-2 border border-gray-600 bg-gray-700 text-white rounded-md'}}) }}
            </div>

            {# Bouton de validation compl√®te #}
            <div class="text-center">
                <button type="submit"
                    class="relative inline-flex items-center justify-center w-full px-4 py-2 text-white bg-blue-700 rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out transform hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-blue-500 bg-blur button-container">
                    <span class="mr-2">{{ 'login.submit'|trans }}</span>
                    <div class="arrow-container">
                        <div class="arrow"></div>
                    </div>
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
