{% extends 'base.html.twig' %}

{% block title %}{{ 'user.new'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-center text-white mb-6">{{ 'user.new'|trans }}</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div class="mb-4">
                {{ form_row(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-600 bg-gray-700 text-white rounded-md'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.password, {'attr': {'class': 'w-full px-4 py-2 border border-gray-600 bg-gray-700 text-white rounded-md'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.roles, {'attr': {'class': 'w-full px-4 py-2 border border-gray-600 bg-gray-700 text-white rounded-md'}}) }}
            </div>

            {# Bouton de validation compl√®te #}
            <div class="text-center">
                <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition duration-300">
                    {{ 'login.submit'|trans }}
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
