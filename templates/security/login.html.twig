{% extends 'base.html.twig' %}

{% block title %}{{ 'login.loginPage'|trans }}
{% endblock %}

{% block body %}

	<header class="bg-white shadow">
		<div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
			<h1 class="text-3xl font-bold tracking-tight text-gray-900">{{ 'login.log'|trans }}</h1>
		</div>
	</header>

	<form method="post">
		{% if error %}
			<div class="alert alert-danger bg-red-700 text-white px-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<br><br><br><br><br><br><br><br>

		<div class="max-w-sm mx-auto p-6 bg-white rounded-lg shadow-md justify-center">
			<div class="mb-5">
				<label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">{{ 'show.email'|trans }}</label>
				<input type="email" value="{{ last_username }}" placeholder="{{ 'login.placeholderMail'|trans }}" name="email" id="inputEmail" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" autocomplete="email" required autofocus>
			</div>
			<div class="mb-5 ">
				<label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">{{ 'show.passwd'|trans }}</label>
				<input type="password" name="password" id="inputPassword" placeholder='motDePasse#' class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" autocomplete="current-password" required>
			</div>
			<div class="mb-5">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>

			<button type="submit" class="text-black bg-sky-900 hover:bg-cyan-700 border border-gray-300 text-sm rounded-lg focus:ring-4 focus:ring-blue-300 focus:outline-none block w-full p-3 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg hover:shadow-2xl">
				{{ 'login.submit'|trans }}
			</button>
		</div>
	</form>
{% endblock %}
