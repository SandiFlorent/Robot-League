{% extends 'base.html.twig' %}

{% block title %}{{ 'index.newChampionshipList'|trans }}{% endblock %}

{% block body %}
<div class="container mx-auto p-8 bg-gray-900 text-white rounded-lg shadow-lg">
    <h1 class="text-4xl font-bold text-center text-white mb-8">{{ 'index.addFields'|trans }}</h1>

    <hr class="border-gray-700 my-6"/>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for fiel in championship_list.field %}
            <div class="bg-gray-800 rounded-lg p-4 shadow-lg">
                <div class="flex justify-between items-center mb-4">
                    <div class="text-blue-400 font-semibold">{{ fiel.Name }}</div>
                    <a href="{{ path('app_championship_list_delete_field', {'id': championship_list.id, 'idField': fiel.id }) }}"
                       class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-700 transition duration-300">
                        {{ 'delete.delete'|trans }}
                    </a>
                </div>
            </div>
        {% else %}
            <div class="text-center text-gray-400">
                {{ 'noField'|trans }}
            </div>
        {% endfor %}
    </div>

    <hr class="border-gray-700 my-6"/>

    <div class="p-6 bg-gray-800 rounded-lg">
        {{ include('field/_form.html.twig') }}
    </div>

    <hr class="border-gray-700 my-6"/>

    <div class="text-center">
        <a href="{{ path('app_championship_list_new_slot', {'id': championship_list.id }) }}"
           class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition duration-300">
            {{ 'base.addSlots'|trans }}
        </a>
    </div>
</div>
{% endblock %}
