<form method="post" action="{{ path('app_championship_list_delete', {'id': championship_list.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ championship_list.id) }}">
    <button type="submit" class="common-button relative inline-flex items-center justify-center text-white bg-red-700 rounded-lg shadow-md hover:shadow-lg focus:outline-none focus:ring-4 focus:ring-red-500 bg-blur button-container">
        <span class="mr-2">{{ 'delete.delete'|trans }}</span>
        <div class="arrow-container">
            <div class="arrow"></div>
        </div>
    </button>
</form>