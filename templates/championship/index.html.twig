{% extends 'base.html.twig' %}

{% block title %}Championnats{% endblock %}

{% block body %}

    <h1>Liste des Championnats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Equipe Blue</th>
                <th>Equipe Green</th>
                <th>But Equipe Blue</th>
                <th>But Equipe Green</th>
                <th>Etat</th>
            </tr>
        </thead>
        <tbody>
            {% for championship in championships %}
                <tr>
                    <td>{{ championship.blueTeam.name }}</td>
                    <td>{{ championship.greenTeam.name }}</td>
                    <td>
                        <form method="POST" action="{{ path('app_championship_save_score', {'id': championship.id}) }}">
                            <input type="number" name="blueScore" value="{{ championship.blueGoal }}" min="0" required>
                    </td>
                    <td>
                        <input type="number" name="greenScore" value="{{ championship.greenGoal }}" min="0" required>
                    </td>
                    <td>
                        <select name="state" class="form-select">
                            <option value="NotStarted" {{ championship.state.value == 'non commencé' ? 'selected' : '' }}>Non commencé</option>
                            <option value="InProgress" {{ championship.state.value == 'en cours' ? 'selected' : '' }}>En cours</option>
                            <option value="WinBlue" {{ championship.state.value == 'Victoire Blue' ? 'selected' : '' }}>Victoire Blue</option>
                            <option value="WinGreen" {{ championship.state.value == 'Victoire Green' ? 'selected' : '' }}>Victoire Green</option>
                            <option value="Draw" {{ championship.state.value == 'Égalité' ? 'selected' : '' }}>Égalité</option>
                            <option value="Canceled" {{ championship.state.value == 'annulé' ? 'selected' : '' }}>Annulé</option>
                        </select>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
