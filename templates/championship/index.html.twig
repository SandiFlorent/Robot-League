{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <!-- Titre principal -->
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Gestion du Championnat</h1>
    </div>

    <!-- Formulaire pour sélectionner un championnat -->
    <div class="mb-4">
        <label for="championshiplist_id" class="text-lg font-semibold text-gray-700">Choisir un championnat</label>
        <form method="get" action="{{ path('app_championship_index') }}">
            <select name="championshiplist_id" id="championshiplist_id" class="px-4 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                <option value="">Sélectionner un championnat</option>
                {% for championshipList in championship_lists %}
                    <option value="{{ championshipList.id }}" {% if championshipList == selected_championship_list %}selected{% endif %}>
                        {{ championshipList.ChampionshipName }}
                    </option>
                {% endfor %}
            </select>
            <button type="submit" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-300 mt-4">
                Voir les Matchs
            </button>
        </form>
    </div>

    <!-- Si un championnat est sélectionné, afficher la liste des matchs -->
    {% if selected_championship_list %}

        <a href="{{ path('app_championship_list_edit', {'id': selected_championship_list.id }) }}" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-green-600 transition duration-300">Modifier le championnat</a>

        <!-- Formulaires pour générer ou supprimer le championnat -->
        <div class="space-y-6">
        
            <!-- Formulaire pour générer le championnat -->
            <form method="post" action="{{ path('app_championship_generate') }}" class="text-center">
                <input type="hidden" name="championship_list_id" value="{{ selected_championship_list.id }}" />
                <button type="submit" class="px-6 py-3 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600 transition duration-300">
                    Générer Championnat
                </button>
            </form>

            <!-- Formulaire pour supprimer tous les championnats -->
            <form method="post" action="{{ path('app_championship_delete_all') }}" 
                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer tous les matchs ?');" 
                class="text-center">
                <button type="submit" class="px-6 py-3 bg-red-500 text-white font-semibold rounded-md hover:bg-red-600 transition duration-300">
                    Supprimer le championnat
                </button>
            </form>
        </div>

        <h2 class="text-2xl mt-8">Matchs du championnat : {{ selected_championship_list.ChampionshipName }}</h2>

        <!-- Affichage des matchs du championnat sélectionné -->
        {% if championships is not empty %}
        <div class="overflow-x-auto shadow-md rounded-lg">
            <table class="min-w-full text-sm text-left text-gray-800 border-collapse border border-gray-300">
                <thead class="text-lg text-gray-700 uppercase bg-gray-100">
                    <tr>
                        <th scope="col" class="px-8 py-6 bg-blue-100 font-semibold">Équipe Bleue</th>
                        <th scope="col" class="px-8 py-6 bg-green-100 font-semibold">Équipe Verte</th>
                        <th scope="col" class="px-8 py-6">But Équipe Bleue</th>
                        <th scope="col" class="px-8 py-6">But Équipe Verte</th>
                        <th scope="col" class="px-8 py-6">État</th>
                        <th scope="col" class="px-8 py-6">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for championship in championships %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap">{{ championship.blueTeam.name }}</td>
                            <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap">{{ championship.greenTeam.name }}</td>
                            <td class="px-8 py-6">
                                <form method="POST" action="{{ path('app_championship_save_score', {'id': championship.id}) }}" onsubmit="saveMatch(event, this)">
                                    <input type="number" name="blueScore" value="{{ championship.blueGoal }}" min="0" required class="px-3 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                            </td>
                            <td class="px-8 py-6">
                                <input type="number" name="greenScore" value="{{ championship.greenGoal }}" min="0" required class="px-3 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                            </td>
                            <td class="px-8 py-6">
                                <select name="state" required class="px-3 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                                    {% for state in states %}
                                        <option value="{{ state.value }}" {% if championship.state.value == state.value %}selected{% endif %}>{{ state.value }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td class="px-8 py-6">
                                <button type="submit" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-300">Sauvegarder</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
            <p class="text-lg text-gray-700 text-center">Aucun match disponible pour ce championnat. Veuillez générer les matchs.</p>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
