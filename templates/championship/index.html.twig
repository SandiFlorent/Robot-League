{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <!-- Titre principal -->
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Gestion du Championnat</h1>
    </div>

   

    <hr class="my-8 border-gray-300" />

    <!-- Formulaire pour sélectionner un championnat -->
    <div class="mb-4">
        <label for="championshiplist_id" class="text-lg font-semibold text-gray-700">Choisir un championnat</label>
        <form method="get" action="{{ path('app_championship_index') }}">
            <select name="championshiplist_id" id="championshiplist_id" class="px-4 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                <option value="">Sélectionner un championnat</option>
                {% for championshipList in championship_lists %}
                    <option value="{{ championshipList.id }}" {% if championshipList == selected_championship_list %}selected{% endif %}>
                        {{ championshipList.ChampionshipName }}
                    </option>
                {% endfor %}
            </select>
            <button type="submit" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-300 mt-4">
                Voir les Matchs
            </button>
        </form>
    </div>

    <!-- Si un championnat est sélectionné, afficher la liste des matchs -->
    {% if selected_championship_list %}
        <!-- Formulaire pour générer ou supprimer le championnat -->
        <div class="space-y-6">
            <!-- Formulaire pour générer le championnat -->
            <form method="post" action="{{ path('app_championship_generate') }}" class="text-center">
                <button type="submit" class="px-6 py-3 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600 transition duration-300">
                    Générer Championnat
                </button>
            </form>

            <!-- Formulaire pour supprimer tous les championnats -->
            <form method="post" action="{{ path('app_championship_delete_all') }}" 
                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer tous les matchs ?');" 
                class="text-center">
                <button type="submit" class="px-6 py-3 bg-red-500 text-white font-semibold rounded-md hover:bg-red-600 transition duration-300">
                    Supprimer le championnat
                </button>
            </form>
        </div>
        <h2 class="text-2xl mt-8">Matchs du championnat : {{ selected_championship_list.ChampionshipName }}</h2>

        <!-- Affichage des matchs du championnat sélectionné -->
        <table class="mt-4 table-auto w-full">
            <thead>
                <tr>
                    <th class="px-4 py-2 border">Équipe Bleue</th>
                    <th class="px-4 py-2 border">Équipe Verte</th>
                    <th class="px-4 py-2 border">Score</th>
                    <th class="px-4 py-2 border">État</th>
                </tr>
            </thead>
            <tbody>
                {% for championship in championships %}
                    <tr>
                        <td class="px-4 py-2 border">{{ championship.blueTeam.name }}</td>
                        <td class="px-4 py-2 border">{{ championship.greenTeam.name }}</td>
                        <td class="px-4 py-2 border">{{ championship.blueGoal }} - {{ championship.greenGoal }}</td>
                        <td class="px-4 py-2 border">{{ championship.state.label }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-2">Aucun match disponible pour ce championnat.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
