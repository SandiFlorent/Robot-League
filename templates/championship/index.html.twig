{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <!-- Titre pour les actions -->
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Gestion du Championnat</h1>
    </div>

    <!-- Formulaires pour générer ou supprimer le championnat -->
    <div class="space-y-6">
        <!-- Formulaire pour générer le championnat -->
        <form method="post" action="{{ path('app_championship_generate') }}" class="text-center">
            <button type="submit" class="px-6 py-3 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600 transition duration-300">
                Générer Championnat
            </button>
        </form>

        <!-- Formulaire pour supprimer tous les championnats -->
        <form method="post" action="{{ path('app_championship_delete_all') }}" 
              onsubmit="return confirm('Are you sure you want to delete all the matches?');" 
              class="text-center">
            <button type="submit" class="px-6 py-3 bg-red-500 text-white font-semibold rounded-md hover:bg-red-600 transition duration-300">
                Supprimer le championnat
            </button>
        </form>
    </div>

    <hr class="my-8 border-gray-300" />

    <!-- Titre de la table des matchs -->
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Liste des matchs</h2>

    <!-- Table des matchs -->
    {% if championships is not empty %}
        <div class="overflow-x-auto shadow-md rounded-lg">
            <table class="min-w-full text-sm text-left text-gray-800 border-collapse border border-gray-300">
                <thead class="text-lg text-gray-700 uppercase bg-gray-100">
                    <tr>
                        <th scope="col" class="px-8 py-6 bg-blue-100 font-semibold">{{ 'index.blueTeam'|trans }}</th>
                    <th scope="col" class="px-8 py-6 bg-green-100 font-semibold">{{ 'index.greenTeam'|trans }}</th>
                    <th scope="col" class="px-8 py-6">{{ 'index.goalBlueTeam'|trans }}</th>
                    <th scope="col" class="px-8 py-6">{{ 'index.goalGreenTeam'|trans }}</th>
                    <th scope="col" class="px-8 py-6">{{ 'index.state'|trans }}</th>
                    <th scope="col" class="px-8 py-6">{{ 'index.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for championship in championships %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap">{{ championship.blueTeam.name }}</td>
                            <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap">{{ championship.greenTeam.name }}</td>
                            <td class="px-8 py-6">
                                <form method="POST" action="{{ path('app_championship_save_score', {'id': championship.id}) }}">
                                    <input type="number" name="blueScore" value="{{ championship.blueGoal }}" min="0" required class="px-3 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                            </td>
                            <td class="px-8 py-6">
                                <input type="number" name="greenScore" value="{{ championship.greenGoal }}" min="0" required class="px-3 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                            </td>
                            <td class="px-8 py-6">
                                <select name="state" required class="px-3 py-2 border border-gray-300 rounded-md w-full sm:w-auto">
                                    {% for state in states %}
                                        <option value="{{ state.value }}" {% if championship.state.value == state.value %}selected{% endif %}>{{ state.value }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td class="px-8 py-6">
                                <button type="submit" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-300">Sauvegarder</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-lg text-gray-700 text-center">Aucun match disponible. Veuillez générer le championnat.</p>
    {% endif %}
</div>
{% endblock %}
