{% extends 'base.html.twig' %}

{% block title %}{{ 'import_championship'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .bg-blur {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.1); /* Fond semi-transparent */
    }

    .arrow-container {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease-in-out;
    }

    button:hover .arrow-container {
        transform: translateX(10px);
    }

    .arrow {
        width: 0;
        height: 0;
        border-left: 5px solid white;
        border-top: 5px solid transparent;
        border-bottom: 5px solid transparent;
    }
</style>
{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen">
    <!-- Titre principal -->
    <p class="text-5xl font-bold text-white mb-8">{{ 'import_championship'|trans }}</p>

    <!-- Formulaire -->
    <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md border border-blue-700">
        {{ include('championship/_import_form.html.twig') }}

        <!-- Bouton de retour -->
        <div class="mt-6 text-center">
            <a href="{{ path('app_home') }}" class="text-blue-400 hover:text-blue-500 font-medium underline">
                {{ 'new.backToList'|trans }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
