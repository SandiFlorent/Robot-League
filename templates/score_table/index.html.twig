{% extends 'base.html.twig' %}

{% block title %}Score!{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white py-8 px-4">
    <div class="max-w-7xl w-full bg-gray-900 shadow-2xl rounded-3xl p-6 md:p-8">
        <h1 class="text-5xl font-bold text-center text-white mb-8">Tableau des scores</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for team in teams %}
                <div class="p-6 bg-gray-800 rounded-xl shadow-md border-2 border-blue-500 transition duration-300 transform hover:scale-105 hover:bg-gray-700 hover:shadow-xl">
                    <p class="text-2xl font-bold text-white">{{ team.getName() }}</p>
                    <p class="text-xl text-blue-400 mt-2">Score: {{ team.getScore() }}</p>
                </div>
            {% else %}
                <div class="p-6 bg-gray-800 rounded-xl shadow-md border-2 border-blue-500 text-center">
                    <p class="text-xl text-gray-400">Aucune donn√©e</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
