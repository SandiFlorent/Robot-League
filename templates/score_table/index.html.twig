{% extends 'base.html.twig' %}

{% block title %}Score!{% endblock %}

{% block body %}

<h1>Tableau des scores!</h1>

<table class="table">
    <thead>
        <tr>
            <th>{{ 'show.name'|trans }}</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
    {% for team in teams %}
        <tr>
            <td>{{ team.getName() }}</td>
            <td>
                {{ team.getScore() }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">{{ 'index.noRecords'|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
