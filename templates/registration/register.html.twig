{% extends 'base.html.twig' %}

{% block title %}{{ 'base.register'|trans }}{% endblock %}

{% block body %}
<header class="bg-gray-800 shadow">
   <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
     <h1 class="text-3xl font-bold tracking-tight text-white">{{ 'base.register'|trans }}</h1>
   </div>
</header> 

<div class="max-w-lg mx-auto p-8 bg-gray-800 rounded-lg shadow-md justify-center mt-32 flex flex-col">
   <div class="mb-5">
   {{ form_errors(registrationForm) }}
       {{ form_start(registrationForm) }}
      <label for="email" class="block mb-2 text-sm font-medium text-white">{{ 'show.email'|trans }}</label>
{{ form_row(registrationForm.email, {
   label: false,
   attr: {
       placeholder: 'login.placeholderMail',
       class: 'bg-gray-700 border border-blue-500 text-white text-sm rounded-lg focus:ring-blue-400 focus:border-blue-400 block w-full p-2.5'
   }
}) }}
   </div>
   <div class="mb-5 ">
       <label for="password" class="block mb-2 text-sm font-medium text-white">{{ 'show.passwd'|trans }}</label>
       {{ form_row(registrationForm.plainPassword, {label: false, 'attr': {'placeholder': '6 caract√®res min.', 'class':'bg-gray-700 border border-blue-500 text-white text-sm rounded-lg focus:ring-blue-400 focus:border-blue-400 block w-full p-2.5'}}) }}
   </div>

   <button type="submit" class="text-white bg-blue-600 hover:bg-blue-700 border border-blue-500 text-sm rounded-lg focus:ring-4 focus:ring-blue-400 focus:outline-none block w-full p-3 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg hover:shadow-2xl">
       {{ 'login.submit'|trans }}
   </button>
   {{ form_end(registrationForm) }}
</div>
{% endblock %}
