    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    {% endblock %}
</head>
<body class="bg-gray-100">
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <div class="min-h-full">
        <nav class="bg-gradient-to-r from-blue-500 via-teal-400 to-indigo-600 flex items-center justify-between px-6 py-4 shadow-lg rounded-b-xl">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <img class="w-12 h-12 rounded-full shadow-lg" src="{{ asset('Images/logo.png') }}" alt="Your Company">
                <p class="text-4xl font-bold text-white">RobotLeague</p>
            </div>

            <!-- Menu Burger (checkbox) -->
            <div class="sm:hidden">
                <label for="menu-toggle" class="cursor-pointer">
                    <svg class="w-6 h-6 text-white transition-all hover:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </label>
                <input type="checkbox" id="menu-toggle" class="hidden" />
            </div>

            <!-- Menu Desktop -->
            <div class="hidden sm:flex space-x-6">
				<a href="{{ path('app_home') }}" class="text-lg font-semibold text-white hover:bg-white hover:text-blue-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Menu</a>
                              	<a href="{{path('app_team_show')}}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Equipes</a>
              	{% if app.user %}  
                                           	{% if is_granted('ROLE_USER') %}
                        	{% if app.user.myTeam == null %}
                            	<a href="{{ path('app_team_new') }}" class="text-lg font-semibold text-white hover:bg-white hover:text-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Créer une équipe</a>
                        	{% else %}
                            	<a href="{{ path('app_team_member', {'id': app.user.myTeam.id}) }}" class="text-lg font-semibold text-white hover:bg-white hover:text-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Mon équipe</a>
                        	{% endif %}
                                           	{% endif %}
                                           	{% if is_granted('ROLE_ORGANISATEUR') %}
												
                                                  	<a href="{{path('app_user_index')}}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Utilisateurs</a>
                       								<a href="{{path('app_championship_index')}}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Championnat</a>
                  						 	{% endif %}
                                          	<a href="{{ path('app_logout') }}" class="text-lg font-semibold text-white hover:bg-white hover:text-red-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Déconnexion</a>
                                          	<button type="button" class="relative ml-auto shrink-0 rounded-full bg-sky-900 hover:bg-gray-700 p-1 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-500">                                          	<span class="absolute -inset-1.5"></span>
                                          	<span class="sr-only">View notifications</span>                                           	
											<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" aria-hidden="true" data-slot="icon">                                                  	
											<path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                                           	</svg>
                                           	</button>
                                   	{% else %}
                                           	<a href="{{ path('app_login') }}" class="text-lg font-semibold text-white hover:bg-white hover:text-blue-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Connexion</a>
                    <a href="{{ path('app_register') }}" class="text-lg font-semibold text-white hover:bg-white hover:text-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Inscription</a>
                                   	{% endif %}
                <a href="{{ path('app_team_show') }}" class="text-lg font-semibold text-white hover:bg-white hover:text-blue-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Equipes</a>
            </div>
        </nav>

        {% block body %}
        {% endblock %}
    </div>

    <!-- Menu mobile -->
    <div class="sm:hidden fixed inset-0 bg-black bg-opacity-50 backdrop-blur z-50 hidden" id="menu-mobile">
        <div class="flex flex-col items-center justify-center h-full space-y-6">
             <a href="{{ path('app_home') }}" class="text-white text-lg font-semibold hover:bg-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Menu</a>
                              	<a href="{{path('app_team_show')}}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Equipes</a>
              	{% if app.user %}  
                                           	{% if is_granted('ROLE_USER') %}
                        	{% if app.user.myTeam == null %}
                            	<a href="{{ path('app_team_new') }}" class="text-white text-lg font-semibold hover:bg-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Créer une équipe</a>
                        	{% else %}
                            	<a href="{{ path('app_team_member', {'id': app.user.myTeam.id }) }}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Mon équipe</a>
                        	{% endif %}
                                           	{% endif %}
                                           	{% if is_granted('ROLE_ORGANISATEUR') %}
												
                                                  	<a href="{{path('app_user_index')}}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Utilisateurs</a>
                       								<a href="{{path('app_championship_index')}}" class="rounded-md px-3 py-2 text-lg font-medium text-sky-900 hover:bg-gray-700 hover:text-white">Championnat</a>
                  						 	{% endif %}
                                          	<a href="{{ path('app_logout') }}" class="text-white text-lg font-semibold hover:bg-red-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Déconnexion</a>
                                          	<button type="button" class="relative ml-auto shrink-0 rounded-full bg-sky-900 hover:bg-gray-700 p-1 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-500">                                          	<span class="absolute -inset-1.5"></span>
                                          	<span class="sr-only">View notifications</span>                                           	
											<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" aria-hidden="true" data-slot="icon">                                                  	
											<path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                                           	</svg>
                                           	</button>
                                   	{% else %}
                                           <a href="{{ path('app_login') }}" class="text-white text-lg font-semibold hover:bg-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Connexion</a>
                                           	<a href="{{ path('app_register') }}" class="text-white text-lg font-semibold hover:bg-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Inscription</a>
                                   	{% endif %}
            <a href="{{ path('app_team_show') }}" class="text-white text-lg font-semibold hover:bg-teal-600 px-4 py-2 rounded-md transition duration-300 ease-in-out transform hover:scale-105">Equipes</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('menu-toggle');
            if (menuToggle) {
                menuToggle.addEventListener('change', function () {
                    const menu = document.getElementById('menu-mobile');
                    if (menu) {
                        if (this.checked) {
                            menu.classList.remove('hidden');
                        } else {
                            menu.classList.add('hidden');
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>
