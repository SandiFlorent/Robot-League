{% extends 'base.html.twig' %}

{% block title %}New Team{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen">
    <!-- Titre principal -->
    <p class="text-5xl font-bold text-white mb-8">{{ 'new.createTeam'|trans }}</p>
    
    <!-- Formulaire -->
    <div class="bg-gray-900 p-8 rounded-lg shadow-lg w-full max-w-md border border-blue-700">
        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
        
        <!-- Champ Name -->
        <div>
            {{ form_label(form.Name, 'new.teamName'|trans, { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-blue-400' } }) }}
            {{ form_widget(form.Name, { 'attr': { 
                'class': 'bg-gray-800 border border-blue-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' } }) }}

            {% for error in form_errors(form.Name) %}
                <div class="text-red-400">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Champ ChampionshipList (sÃ©lection du championnat) -->
        <div>
            {{ form_label(form.championshipList, 'Choisir un championnat', { 'label_attr': { 'class': 'block mb-2 text-sm font-medium text-blue-400' } }) }}
            {{ form_widget(form.championshipList, { 'attr': { 
                'class': 'bg-gray-800 border border-blue-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' } }) }}
            
            {% for error in form_errors(form.championshipList) %}
                <div class="text-red-400">{{ error.message }}</div>
            {% endfor %}
        </div>
        
        <!-- Bouton de soumission -->
        <button type="submit" 
            class="relative inline-flex items-center justify-center w-full p-3 text-white bg-blue-700 border border-blue-700 rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out transform hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-blue-500">
            <span class="absolute inset-0 w-full h-full bg-gradient-to-b from-transparent to-blue-500 opacity-0 group-hover:opacity-20 transition-opacity duration-300"></span>
            {{ button_label|default('new.addTeam'|trans) }}
        </button>
        
        {{ form_end(form) }}
        
        <!-- Bouton de retour -->
        <div class="mt-6 text-center">
            <a href="{{ path('app_team_index') }}" class="text-blue-400 hover:text-blue-500 font-medium underline">
                {{ 'new.backToList'|trans }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
