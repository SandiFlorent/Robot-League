{% extends 'base.html.twig' %}

{% block title %}Choisir un championnat{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen">
    <p class="text-5xl font-bold text-white mt-12 mb-8">Choisir un championnat</p>

    <form method="get" action="{{ path('app_choose_championship_member') }}" class="bg-gray-900 p-8 rounded-lg shadow-lg w-full max-w-md border border-blue-700">
        <label for="championship" class="block mb-2 text-lg font-medium text-blue-400">SÃ©lectionnez un championnat :</label>
        <select id="championship" name="championship" required class="w-full p-3 bg-gray-800 border border-blue-500 text-white rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
            <option value="" disabled selected>-- {{ 'base.chooseChamp'|trans }} --</option>
            {% for championship in championships %}
                <option value="{{ championship.id }}" class="text-white">{{ championship.ChampionshipName }}</option>
            {% endfor %}
        </select>

        <button type="submit" class="mt-6 w-full px-6 py-3 bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-600 transform hover:scale-105 transition-all duration-300">
            {{ 'base.submit'|trans }}
        </button>
    </form>
</div>

{% endblock %}
