{% extends 'base.html.twig' %}

{% block title %}{{ 'base.slots'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'base.slots'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'show.id'|trans }}</th>
                <td>{{ slot.id }}</td>
            </tr>
            <tr>
                <th>{{ 'index.beginDate'|trans }}</th>
                <td>{{ slot.dateDebut ? slot.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'index.endDate'|trans }}</th>
                <td>{{ slot.dateEnd ? slot.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_slot_index') }}">{{ 'new.backToList'|trans }}</a>

    <a href="{{ path('app_slot_edit', {'id': slot.id}) }}">{{ 'show.edit'|trans }}</a>

    {{ include('slot/_delete_form.html.twig') }}
{% endblock %}
