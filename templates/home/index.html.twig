{% extends 'base.html.twig' %}

{% block title %}{{ 'index.home'|trans }}{% endblock %}

{% block body %}
<html>
    <body>
        <div class="flex justify-start flex-row p-8 space-y-8"> 
            <div class="bg-zinc-100 shadow-lg p-8 border border-zinc-50 h-screen w-full overflow-auto"> <!-- Ajouter overflow-auto pour limiter les débordements -->
                {% if championships is not empty %}
                <h1 class="text-3xl font-bold text-gray-800 mb-8">{{ 'index.matchList'|trans }}</h1>
                <div class="overflow-x-auto"> <!-- Gérer l'overflow horizontal -->
                    
                    <!-- Affichage normal (tableau) sur grand écran -->
                    <div class="hidden sm:block">
                    <table class="min-w-full text-base text-left text-gray-800 border-collapse border border-gray-300">
                        <thead class="text-lg text-gray-700 uppercase bg-gray-100">
                            <tr>
                                <th scope="col" class="px-8 py-6 bg-blue-100 font-semibold">{{ 'index.blueTeam'|trans }}</th>
                                <th scope="col" class="px-8 py-6">{{ 'index.goalBlueTeam'|trans }}</th>
                                <th scope="col" class="px-8 py-6">{{ 'index.goalGreenTeam'|trans }}</th>
                                <th scope="col" class="px-8 py-6 bg-green-100 font-semibold">{{ 'index.greenTeam'|trans }}</th>
                                <th scope="col" class="px-8 py-6">{{ 'index.state'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for championship in championships %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap">{{ championship.blueTeam.name }}</td>
                                <td class="px-8 py-6">{{ championship.blueGoal }}</td>
                                <td class="px-8 py-6">{{ championship.greenGoal }}</td>
                                <td class="px-8 py-6 font-medium text-gray-900 whitespace-nowrap">{{ championship.greenTeam.name }}</td>
                                <td class="px-8 py-6">{{ championship.state.value }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                    <p class="text-lg text-gray-700">{{ 'index.noChampionship'|trans }}</p>
                {% endif %}           
            </div>         
        </div>

        <!-- Pied de page -->
        <div class="w-screen h-full bg-black text-white flex flex-col">
            <div class="flex flex-row justify-evenly p-8">
                <a href="{{ path('app_home') }}" class="hover:underline">{{ 'index.legalNotices'|trans }}</a>
                <a href="{{ path('app_home') }}" class="hover:underline">{{ 'index.legalNotices'|trans }}</a>
                <a href="{{ path('app_home') }}" class="hover:underline">{{ 'index.legalNotices'|trans }}</a>
                
            </div>    
            <div class="flex flex-row justify-evenly p-8">
                <a href="{{ path('app_home') }}" class="hover:underline">{{ 'index.legalNotices'|trans }}</a>
                <a href="{{ path('app_home') }}" class="hover:underline">{{ 'index.legalNotices'|trans }}</a>
                <a href="{{ path('app_home') }}" class="hover:underline">{{ 'index.legalNotices'|trans }}</a>
            </div>    
        </div>
    </body>
</html>
{% endblock %}
