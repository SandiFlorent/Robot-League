{% extends 'base.html.twig' %}

{% block title %}Matchs du Championnat{% endblock %}

{% block body %}
<html>
    <body class="bg-white font-sans flex flex-col h-screen">
        <!-- Contenu principal -->
        <div class="flex-grow p-12">
            <div class="max-w-7xl mx-auto">
                {% if championships is not empty %}
                    <!-- Titre avec effet spectaculaire -->
                    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-800 mb-12 text-center leading-tight tracking-wide uppercase border-b-4 border-blue-500 pb-4">
                        Matchs du Championnat
                    </h1>


                    
                    <!-- Grille des équipes -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
                        {% for championship in championships %}
                            <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out hover:scale-105 hover:border-4 hover:border-blue-400 hover:bg-gradient-to-r hover:from-blue-50 hover:to-blue-100 hover:cursor-pointer">
                                <div class="flex flex-col space-y-6">
                                    <!-- Équipe Bleue -->
                                    <div class="bg-gradient-to-r from-blue-400 to-blue-500 text-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 ease-in-out">
                                        <h3 class="text-2xl font-semibold">{{ championship.blueTeam.name }}</h3>
                                        <p class="text-xl">{{ championship.blueGoal }} buts</p>
                                    </div>
                                    
                                    <!-- Équipe Verte -->
                                    <div class="bg-gradient-to-r from-green-400 to-green-500 text-white p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 ease-in-out">
                                        <h3 class="text-2xl font-semibold">{{ championship.greenTeam.name }}</h3>
                                        <p class="text-xl">{{ championship.greenGoal }} buts</p>
                                    </div>
                                    
                                    <!-- État -->
                                    <div class="p-6 bg-gray-50 rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 ease-in-out">
                                        <span class="font-medium text-gray-600">État du match:</span>
                                        <span class="text-xl font-semibold text-blue-600">{{ championship.state.value }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-lg text-gray-700 text-center">Pas de championnat en cours</p>
                {% endif %}
            </div>
        </div>

        <!-- Footer -->
        <div class="w-full bg-black text-white py-8 mt-auto">
            <div class="flex justify-evenly mb-4">
                <a href="{{ path('app_home') }}" class="text-sm hover:text-blue-600 hover:underline transition-all duration-300 ease-in-out">Mentions légales</a>
                <a href="{{ path('app_home') }}" class="text-sm hover:text-blue-600 hover:underline transition-all duration-300 ease-in-out">Politique de confidentialité</a>
                <a href="{{ path('app_home') }}" class="text-sm hover:text-blue-600 hover:underline transition-all duration-300 ease-in-out">Contact</a>
            </div>    
            <div class="flex justify-evenly">
                <a href="{{ path('app_home') }}" class="text-sm hover:text-blue-600 hover:underline transition-all duration-300 ease-in-out">Plan du site</a>
                <a href="{{ path('app_home') }}" class="text-sm hover:text-blue-600 hover:underline transition-all duration-300 ease-in-out">Support</a>
                <a href="{{ path('app_home') }}" class="text-sm hover:text-blue-600 hover:underline transition-all duration-300 ease-in-out">FAQ</a>
            </div>    
        </div>
    </body>
</html>
{% endblock %}

