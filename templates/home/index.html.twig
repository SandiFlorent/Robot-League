{% extends 'base.html.twig' %}

{% block title %}Matchs du Championnat{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen">
    <!-- Titre principal -->
    <p class="text-5xl font-bold text-white mt-12 mb-8">Liste des Matchs</p>
    
    <!-- Contenu principal -->
    <div class="flex-grow p-6 w-full max-w-7xl mx-auto mt-12">
    <!-- Formulaire de sélection du championnat -->
    <form method="get" action="{{ path('app_home') }}" class="mb-8 bg-gray-800 p-6 rounded-lg shadow-lg">
        <label for="championshiplist_id" class="block text-lg font-semibold text-white mb-2">Choisir un championnat :</label>
        <select name="championshiplist_id" id="championshiplist_id" 
                class="px-4 py-2 border border-blue-500 bg-gray-700 text-white rounded-lg focus:ring-blue-400 focus:border-blue-400 block w-full sm:w-auto">
            <option value="">Sélectionner un championnat</option>
            {% for championshipList in championshipLists %}
                <option value="{{ championshipList.id }}" {% if championshipList.id == selected_championship_id %}selected{% endif %}>
                    {{ championshipList.championshipName }}
                </option>
            {% endfor %}
        </select>

        <button type="submit" 
                class="mt-4 px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition duration-300 ease-in-out transform hover:scale-105">
            Afficher les matchs
        </button>
    </form>

        {% if championships is not empty %}
        <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
            {% for championship in championships %}
            <div class="border border-blue-700 p-8 rounded-3xl shadow-2xl hover:shadow-3xl transition-shadow duration-300 bg-gray-900 transform hover:scale-105 transition-transform duration-300">
                <div class="text-center mb-6">
                    <h2 class="text-2xl font-semibold text-blue-400">Match</h2>
                </div>
                <div class="flex justify-between mb-4 border-b pb-2">
                    <span class="text-lg font-semibold text-blue-400">Équipe Bleue</span>
                    <span class="text-lg font-bold text-blue-500">{{ championship.blueTeam.name }}</span>
                </div>
                <div class="flex justify-between mb-4 border-b pb-2">
                    <span class="text-lg font-semibold text-blue-400">Score Bleue</span>
                    <span class="text-lg font-bold text-blue-500">{{ championship.blueGoal }}</span>
                </div>
                <div class="flex justify-between mb-4 border-b pb-2">
                    <span class="text-lg font-semibold text-green-400">Score Verte</span>
                    <span class="text-lg font-bold text-green-500">{{ championship.greenGoal }}</span>
                </div>
                <div class="flex justify-between mb-4 border-b pb-2">
                    <span class="text-lg font-semibold text-green-400">Équipe Verte</span>
                    <span class="text-lg font-bold text-green-500">{{ championship.greenTeam.name }}</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-lg font-semibold text-gray-400">État</span>
                    <span class="text-lg font-bold text-white">{{ championship.state.value }}</span>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
            <p class="text-lg text-white text-center">Pas de championnat en cours</p>
        {% endif %}
    </div>

    <!-- Pied de page amélioré -->
    <footer class="bg-gray-900 text-white py-12 w-full mt-12">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div>
                <h3 class="text-xl font-semibold mb-4">Informations</h3>
                <a href="{{ path('app_home') }}" class="block hover:underline">Mentions légales</a>
                <a href="{{ path('app_home') }}" class="block hover:underline">Politique de confidentialité</a>
            </div>
            <div>
                <h3 class="text-xl font-semibold mb-4">Support</h3>
                <a href="{{ path('app_home') }}" class="block hover:underline">Contact</a>
                <a href="{{ path('app_home') }}" class="block hover:underline">FAQ</a>
            </div>
            <div>
                <h3 class="text-xl font-semibold mb-4">Suivez-nous</h3>
                <a href="#" class="block hover:underline">Twitter</a>
                <a href="#" class="block hover:underline">Facebook</a>
                <a href="#" class="block hover:underline">Instagram</a>
            </div>
        </div>
    </footer>
</div>
{% endblock %}
